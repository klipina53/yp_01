<Page x:Class="yp02.Item.MainPartners"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:yp02.Item"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPartners">

    <Grid Background="#67BA80">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="73*"/>
            <ColumnDefinition Width="727*"/>
        </Grid.ColumnDefinitions>
        <Grid Background="#F4E8D3" Height="85" VerticalAlignment="Top" Grid.ColumnSpan="2" >
            <Image Source="/Images/logo.png" Width="50" Height="50" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0"/>
            <Button Click="BackClick" Content="Nazad" Height="30" Width="100" Margin="690,5,10,50" BorderBrush="Transparent" FontSize="15"/>

        </Grid>
        <Label Content="Партнёры" FontFamily="Segoe UI" Margin="276,16,349,0" FontSize="20" VerticalAlignment="Top" Grid.Column="1"/>
        <Border BorderBrush="Black" BorderThickness="1" Margin="20,90,20,40" Grid.ColumnSpan="2">
            <ScrollViewer Background="#F4E8D3">
                <StackPanel x:Name="parent"/>
            </ScrollViewer>
        </Border>
        <Button Click="addOrChange" Height="24" Width="150" Background="#F4E8D3" Margin="0,0,20,10" Content="Добавить" 
            HorizontalAlignment="Right" VerticalAlignment="Bottom" Grid.Column="1"/>
    </Grid>
</Page>
